generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Search {
  id          Int       @id @default(autoincrement())
  role_title  String
  keywords    String
  created_at  DateTime  @default(now())
  candidates  Candidate[]

  @@map("Search")
}

model Candidate {
  id          Int     @id @default(autoincrement())
  handle      String
  match_score Int
  reasoning   String
  searchId    Int
  search      Search  @relation(fields: [searchId], references: [id], onDelete: Cascade)

  @@map("Candidate")
}